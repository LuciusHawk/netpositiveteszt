<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div style="text-align: center">
    Netpositive Teszt: Twitter & Chuck Norris
</div>
{% block body %}
   <div style="padding: 20px 0;">
       {{ form_start(form) }}
       {{ form_widget(form) }}
       {{ form_end(form) }}
   </div>

    {% if tableArray is not empty %}
        {% autoescape false %}
            <table  border="1" width="100%">
                <tr style="text-align: center; border-bottom: solid 1px black;">
                    <th>Number</th>
                    <th>Source</th>
                    <th>Time</th>
                    <th>Message</th>
                </tr>
                {% for row in tableArray %}
                    <tr style="text-align: center;">
                        <td style=" padding: 2px;">{{ loop.index }}</td>
                        <td style=" padding: 2px;">{{ row.source }}</td>
                        <td style=" padding: 2px;">{{ row.time }}</td>
                        <td style=" padding: 2px;">{{ row.message }}</td>
                    </tr>
                {% endfor %}
            </table>
        {% endautoescape %}
    {% endif %}

{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
